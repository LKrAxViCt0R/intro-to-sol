pragma solidity ^0.8.0;

//Write a Solidity contract with 4 functions; add, subtract, multiply and divide 2 numbers.

contract LessonFourChallenge{
    
    uint a;
    uint b;

    constructor(uint _a, uint _b){
        a= _a;
        b=_b;
    }


    function add() public view returns(uint){
        return a+b;
    }

    function subtract() public view returns(uint){
        return a-b;
    }

    function multiply() public view returns(uint){
        return a*b;
    }

    function div() public view returns(uint){
        if(b==0){
            return 0;
        }
        return a/b;
    }

}
